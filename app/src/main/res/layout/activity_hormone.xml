<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="thin.blog.polymersynthesis.Techniques">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar"></include>

        <Button
            android:id="@+id/acth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="acth"
            android:padding="8dp"
            android:text="Adrenocorticotropic hormone(ACTH)"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />

        <Button
            android:id="@+id/anp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="anp"
            android:padding="8dp"
            android:text="Atrial natriuretic peptide (ANP)"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />

        <Button
            android:id="@+id/crh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="crh"
            android:padding="8dp"
            android:text="Corticotropin-releasing hormone(CRH)"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />

        <Button
            android:id="@+id/ghrh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="ghrh"
            android:padding="8dp"
            android:text="Growth hormone-releasing hormone(GHRH)"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />

        <Button
            android:id="@+id/cells"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="cells"
            android:padding="8dp"
            android:text="Insulin (Î² cells)"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />

        <Button
            android:id="@+id/leptin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="leptin"
            android:padding="8dp"
            android:text="Leptin"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />

        <Button
            android:id="@+id/trh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="trh"
            android:padding="8dp"
            android:text="Thyrotropin-releasing hormone(TRH)"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />

        <Button
            android:id="@+id/t3t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:onClick="t3t4"
            android:padding="8dp"
            android:text="Thyroxine(T4) and triiodothyronine(T3)"
            android:textAllCaps="false"
            android:textColor="@color/colorIcons" />
    </LinearLayout>
</ScrollView>